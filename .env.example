# Required (core app)
APP_ORIGIN=http://localhost:5173

# Required (SMTP) - leave blank to log magic links to the server console
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@example.com

# Optional (auth behavior)
ALLOWED_EMAILS=you@example.com,teammate@example.com
SHOW_ALLOWLIST_ERROR=true
TOKEN_TTL_MS=900000
SESSION_TTL_MS=604800000

# Optional (log viewer)
ENABLE_LOG_VIEWER=false
LOG_BUFFER_SIZE=500
LOG_LEVEL=info

# Optional (CloudWatch viewer)
ENABLE_CLOUDWATCH_VIEWER=false
CLOUDWATCH_LOG_GROUP=
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# Optional (SQS viewer)
ENABLE_SQS_VIEWER=false
SQS_QUEUE_URL=
